@model IEnumerable<GL.Models.Game>

@{
    ViewBag.Title = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista Gier</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Tytuł gry</th>
            <th>Gatunek</th>
            <th>Wydawca</th>
            <th>Rok wydania</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@Html.ActionLink(game.Name, "Details", "Games", new { id = game.Id }, null)</td>
                <td>@game.Genre</td>
                <td>@game.Distributor</td>
                <td>@game.ReleaseYear</td>
            </tr>
        }
    </tbody>
</table>